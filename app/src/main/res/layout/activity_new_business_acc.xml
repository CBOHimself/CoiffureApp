<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EDF7F6"
    android:layout_height="match_parent"
    tools:context=".NewBusinessAcc">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/registerAsUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Register as a User" />

                <EditText
                    android:id="@+id/businessName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Name of Business"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/businessType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Business Type"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/signupemail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/passwordrentry"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Re-enter Passsword"
                    android:inputType="textPassword"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Address"
                    android:inputType="textLongMessage"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/postcode"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Post Code"
                    android:inputType="textPostalAddress"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/city"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="City"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/country"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Country"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/description"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:gravity="top"
                    android:textSize="20dp"
                    android:scrollbars="vertical"
                    android:overScrollMode="always" />

                <CheckBox
                    android:id="@+id/agreement"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="I agree to the terms and conditions and the privacy policy" />

                <Button
                    android:id="@+id/completesignup"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up" />

                <Button
                    android:id="@+id/backsignin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back" />

                <ProgressBar
                    android:id="@+id/signupprog"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>